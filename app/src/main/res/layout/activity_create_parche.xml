<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".activities.Parchar.CreateParche">

    <TextView
        android:id="@+id/title_create_parche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/poppins_font"
        android:gravity="center"
        android:text="@string/create_parche_text_title"
        android:textAlignment="center"
        android:textColor="@color/beige"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_properties"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toTopOf="@+id/button_go"
        app:layout_constraintTop_toBottomOf="@+id/title_create_parche">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linear_layout_sport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_sport"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.8"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edittext_search_sport"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:autofillHints=""
                        android:background="@drawable/shape_rectangle_3"
                        android:fontFamily="@font/poppins_font"
                        android:gravity="center"
                        android:hint="@string/text_search"
                        android:inputType="text"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="35dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlCompat" />

                    <ImageView
                        android:id="@+id/imageview_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:src="@drawable/icon_magnifying_glass"
                        app:layout_constraintBottom_toBottomOf="@+id/edittext_search_sport"
                        app:layout_constraintEnd_toEndOf="@+id/edittext_search_sport"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/edittext_search_sport"
                        tools:ignore="ContentDescription" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linear_layout_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/textview_level"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:id="@+id/edittext_level"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.8"
                    android:autofillHints=""
                    android:background="@drawable/shape_rectangle_3"
                    android:fontFamily="@font/poppins_font"
                    android:gravity="center"
                    android:hint="@string/create_parche_enter_your_level"
                    android:inputType="text"
                    android:paddingTop="6dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linear_layout_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/textview_time"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:id="@+id/edittext_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.8"
                    android:autofillHints=""
                    android:background="@drawable/shape_rectangle_3"
                    android:fontFamily="@font/poppins_font"
                    android:gravity="center"
                    android:hint="@string/create_parche_minutes_to_play"
                    android:inputType="text"
                    android:paddingTop="6dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linear_layout_place_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="NestedWeights,UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/textview_place"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:id="@+id/edittext_place"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.8"
                    android:autofillHints=""
                    android:background="@drawable/shape_rectangle_3"
                    android:fontFamily="@font/poppins_font"
                    android:gravity="center"
                    android:hint="@string/create_parche_enter_an_address"
                    android:inputType="text"
                    android:paddingTop="6dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/button_select_place_on_map"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_margin="0dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/shape_void"
                    android:fontFamily="@font/poppins_font"
                    android:gravity="top|center"
                    android:paddingLeft="4dp"
                    android:paddingTop="0dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="0dp"
                    android:text="@string/create_parche_or_select_the_place_on_the_map"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/button_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/dark_red"
        android:fontFamily="@font/poppins_font"
        android:paddingStart="60dp"
        android:paddingTop="8dp"
        android:paddingEnd="60dp"
        android:paddingBottom="3dp"
        android:text="@string/text_go_exclamation_mark"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>